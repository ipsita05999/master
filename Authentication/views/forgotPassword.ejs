<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <div class="container">
    <h1>Forget Password</h1>
    <form class="form" id="form">
      <div class="form-controls">
        <label for="email">Email:</label><sup style="color: red;">*</sup>
        <input type="email" id="email" placeholder="Enter your registered email" name="email" autocomplete="false">
        <i class="fa-solid fa-circle-check"></i>
        <i class="fa-solid fa-circle-exclamation"></i>
        <small>Error Msg</small>
      </div>
      <input type="submit" value="Generate Random Password" class="reset-btn">
    </form>
    <a class="backhome" href="/logIn">Back To LogIn</a>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.3/dist/sweetalert2.all.min.js"></script>
  <script src="/JavaSripts/forgetPassword.js"></script>
</body>
</html>